{
  "name": "fzed51/repository",
  "description": "Système de base pour concevoir des repository faisant appel à PDO",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Fabien Sanchez",
      "email": "fzed51@users.noreply.github.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^7.1",
    "ext-pdo": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.3"
  },
  "autoload": {
    "psr-4": {
      "Repository\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\Stub\\": "./test/Stub"
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}
